<div id='profile'>
    <div class="row justify-content-between">
        <h3 style="display:flex; justify-content:center;"><strong><%=t('profile.my')%><br><br></strong></h3>
        <div class='col-6'>        
        <h3 style='margin-left: 50px'><%=t('profile.name')%>: <%= current_user.name%><h3>
        <h3 style='margin-left: 50px'><%=t('profile.email')%>: <%= current_user.email%><h3> <br>
        <h3 style='margin-left: 50px'><%=t('profile.status')%>: <%= @status %> <h3>

        <% if @coach.present? %>
            <h3 style='margin-left: 50px'><%=t('profile.spec')%>: <%= @coach.act.service.name%> => <%=@coach.act.activity%> <h3> 
        <% else %>
            <h3 style='margin-left: 50px'><%=t('profile.my_recs')%>:<h3>        
            <%= render 'user/student' %>
        <% end %>
        </div>
        <div class='col-5'>
            <%= image_tag "profile.png", width: '500', height: '400',:alt => "Профиль"%>
        </div>
    </div>
</div>