<% act = $record[:activity] %>
<div class="row justify-content-between">
    <div class=col-5>
         <%= link_to service_path do %>
            <%= image_tag "back.png", style: "margin-left: 55px",size: "40x40", :alt => "Назад" %>
        <% end %>
    </div>
    <div class=col-7>
        <h1 style> <%= act %> </h1>
    </div>
</div>
<br>
<div class="row justify-content-between">
    <div class=col-5>
        <%= image_tag "#{transl[act]}.jpg", style: "margin-left: 10px", size: "650x500", :alt => "service img" %> 
    </div>
    <div class=col-6>
        <% file = "join/#{transl[$record[:service]]}_acts/#{transl[act]}" %> 
        <div class="container"  style="margin-right: 50px; position: relative; top: 30%;">   
            <div> <%= render file %> </div>
            <div> <%= link_to 'Записаться', club_path,  class: "btn btn-primary" %>  </div>
        </div>
    </div>
